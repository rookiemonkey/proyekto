<%= render 'components/breadcrumb', breadcrumbs: ['Projects'] %>

<section class="section section-main">
  <div class="tile is-ancestor tile-is-ancestor-custom">

    <% @projects.each do |project| %>
    
      <a href="<%= organization_project_path(project) %>">
        <div class="tile is-parent tile-is-parent-custom">
          <div class="card tile is-child tile-is-child-custom">
            <div class="card-content">
              <div class="level is-mobile">
                <div class="level-item">
                  <div class="is-widget-label">
                    <h3 class="subtitle is-spaced">
                      <%= project.name %>
                    </h3>
                  </div>
                </div>
                <div class="level-item has-widget-icon">
                  <div class="is-widget-icon"><span class="icon has-text-primary is-large"><i class="mdi mdi-progress-wrench mdi-48px"></i></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </a>

    <% end %>

  </div>
</section>